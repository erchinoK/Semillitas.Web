@model Semillitas.Web.Models.ViewModels.SlideCreateViewModel

@{
    ViewBag.Title = "Crear nuevo";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Create", "Slide", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Banner</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <small>(Se muestra si la imagen no se carga)</small>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageFileEsp, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <mark class="">Dimension recomendada: 1200 x 700 pixeles</mark>
            <input type="file" name="@Html.NameFor(model => model.ImageFileEsp)" id="@Html.IdFor(model => model.ImageFileEsp)" />
            @*<input type="file" name="@Html.NameFor(model => model.Image)" id="@Html.IdFor(model => model.Image)" />*@
            @*@Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.ImageFileEsp, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
        @Html.LabelFor(model => model.ImageFileCat, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <mark class="">Dimension recomendada: 1200 x 730 pixeles</mark>
            <input type="file" name="@Html.NameFor(model => model.ImageFileCat)" id="@Html.IdFor(model => model.ImageFileCat)" />
            @Html.ValidationMessageFor(model => model.ImageFileCat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageFileEng, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <mark class="">Dimension recomendada: 1200 x 730 pixeles</mark>
            <input type="file" name="@Html.NameFor(model => model.ImageFileEng)" id="@Html.IdFor(model => model.ImageFileEng)" />
            @Html.ValidationMessageFor(model => model.ImageFileEng, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.Html, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Html, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Html, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
